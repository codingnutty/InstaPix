<h1>Instagram Lookup</h1>
<div class="container-fluid">
  <div class="row">
    <%= form_tag({:action => 'index', :controller => "collections"}, :method => "get", id: "search-form") do %>
    <div class="col-md-2 col-sm-4 col-xs-12">
      <%= text_field_tag :search, params[:search], placeholder: "Search tags" %>
    </div>
    <div class="col-md-2 col-sm-3 col-xs-6">
      <%= submit_tag "Search" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= render :partial => "posts" %>
    </div>
  </div>
</div>

